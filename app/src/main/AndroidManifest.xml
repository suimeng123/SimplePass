<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lx.simplepass">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <application
        android:name=".base.APPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.lx.simplepass.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页面 -->
        <activity android:name=".activity.MainFramworkActivity"/>
        <!-- 菜谱页面 -->
        <activity android:name=".activity.CookActivity"/>
        <!-- 菜谱详情页面 -->
        <activity android:name=".activity.CookDetailActivity"/>
        <!-- 查看大图页面 -->
        <activity android:name=".activity.LookBigImgActivity"/>
        <!-- 微信段子页面 -->
        <activity android:name=".activity.WeixinPieceActivity"/>
        <!-- 微信段子详情页面 -->
        <activity android:name=".activity.WeixinPieceDetailActivity"/>
    </application>

</manifest>